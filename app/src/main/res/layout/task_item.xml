<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.ivanasharov.smartplanner.presentation.model.TaskViewModel" />
        <variable
            name="mainViewModel"
            type="com.ivanasharov.smartplanner.presentation.viewModel.CurrentDayViewModel" />
    </data>
<RelativeLayout
        app:cardCornerRadius="4dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleTextViewItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/currentDayCheckBoxItem"
            android:paddingRight="10dp"
            android:text="@{viewModel.name}"
            android:textSize="20sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/currentDayCheckBoxItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="@{viewModel.status}"
            android:layout_alignParentEnd="true" />

</RelativeLayout>
</layout>